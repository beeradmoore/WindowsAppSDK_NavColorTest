                            <Color x:Key="ButtonInactiveBackgroundColor">#F3F3F3</Color>
                            <Color x:Key="ButtonInactiveForegroundColor">#9B9B9B</Color>
                            <Color x:Key="ButtonPressedBackgroundColor">#EDEDED</Color>
                            <Color x:Key="ButtonPressedForegroundColor">#5F5F5F</Color>
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="HighContrast">
                            
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>
                    
                </ResourceDictionary>


                
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->


        </ResourceDictionary>
    </Application.Resources>
